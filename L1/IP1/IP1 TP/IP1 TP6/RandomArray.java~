import java.util.Random;
public class RandomArray {
 static Random rand = new Random();

/* ************************************************************************** */
  

    //  QUESTION 1 
    public static int[] createRandomArray(int n){
	int [] R = new int [n];
	for (int i=0; i<n; i++){
	    R[i]=rand.nextInt(n);
	}
	return R;
    }
    
    // QUESTION 2
    public static int[] minMaxAverage(int[] a){
	int [] R = new int [3];
	R[0]=a[0];
	R[1]=a[0];
	R[2]=a[0];
	for (int i=1; i<a.length; i++){
	    if (R[0]>a[i]){
		R[0]=a[i];
	    }
	    if (R[1]<a[i]){
		R[1]=a[i];
	    }
	    R[2]=R[2]+a[i];
	}
	R[2]=R[2]/a.length;
	return R;
    }
	
    // QUESTION 3
    public static int[] occurrences(int[] a){
	int max = minMaxAverage(a)[1]+1;
	int [] R = new int [max];
	for (int i=0; i<max; i++){
	    for (int k=0; k<a.length; k++){
		if(a[k]==i){
		    R[i]++;
		}
	    }
	}
	return R;
    }
	
    // QUESTION 4a
    public static int[] countingSort(int[] a){
	int [] R = new int [a.length];
	int k=0;
	for (int i=0; i<occurrences(a).length; i++){
	    for (int j=0; j<occurrences(a)[i]; j++){
		R[k]=i;
		k++;
	    }
	}
	return R;
    }
	    
    // QUESTION 4b
    public static void countingSort2(int[] a){
	int p=0;
	for (int i=0; i<a.length; i++){
	    for (int j=0; j<a.length; j++){
		if(a[i]<a[j]){
		    p=a[i];
		    a[i]=a[j];
		    a[j]=p;
		}
	    }
	}
        printIntArray(a);
    }
	
    public static boolean  intArrayEquals (int[] a, int[] b){
    	if (a.length!=b.length) {
	        return false;
		}
	    for (int i=0; i<a.length; i++){
	        if (a[i]!=b[i]){
	        	return false;
	        }
	    }
	    return true;
    }
  
    public static void printIntArray (int[] a){
	    for (int i = 0; i<a.length ; i++){
	        System.out.print(a[i] + " ");
	    }
	    System.out.println();
    }


    public static void main(String[] args){
        int[] a = createRandomArray(100);
	int[] b = countingSort(a);
	countingSort2(a);
	System.out.println(intArrayEquals(a,b));
	
    }
}

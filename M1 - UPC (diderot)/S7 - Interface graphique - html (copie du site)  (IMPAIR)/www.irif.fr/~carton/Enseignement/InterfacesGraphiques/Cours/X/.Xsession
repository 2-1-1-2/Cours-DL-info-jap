#!/bin/sh

# Fond d'écran
xv -max -root -quit $HOME/Spool/astronaut.gif &
# Chargement des ressources
xrdb -merge .Xresources &
# Autorisation de clients depuis cette machine distante
xhost monge.univ-mlv.fr
# Gestionnaire de fenêtres
mwm &
# Horloge
xclock  &
# Avertisseur de courrier
xbiff &
# Editeur
emacs &
# Console
xterm -iconic  -ls -C -fg white -bg black -g 80x60-0-0 -n Login
